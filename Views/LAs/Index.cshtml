@model IEnumerable<ErasmusSDS.Models.LA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Asegúrate de utilizar tu diseño compartido si lo tienes.
}

<div class="container">
    <h2>LA List</h2>
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.NombreEstudiante)</th>
                <th>@Html.DisplayNameFor(model => model.status)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NombreEstudiante)</td>
                    <td>@Html.DisplayFor(modelItem => item.status)</td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.LAID }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Details", "Details", new { id = item.LAID }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.LAID }, new { @class = "btn btn-danger btn-sm" })

                        @using (Html.BeginForm("UpdateStatus", "LAs", FormMethod.Post))
                        {
                            @Html.Hidden("LAID", item.LAID)
                            <input type="submit" value="Sign" class="btn btn-success btn-sm" />
                        }

                        <!-- Agregar nuevo curso -->
                        @using (Html.BeginForm("AddCourse", "LAs", FormMethod.Post))
                        {
                            @Html.Hidden("laId", item.LAID)
                            <label>Nombre del Curso:</label>
                            <input type="text" name="courseName" required /> <!-- Cambiado a courseName -->

                            <input type="submit" value="Agregar Curso" class="btn btn-info btn-sm" />
                        }


                        <!-- Eliminar curso -->
                        @using (Html.BeginForm("RemoveCourse", "LAs", FormMethod.Post))
                        {
                            @Html.Hidden("laId", item.LAID)
                            <label>Nombre del Curso a Eliminar:</label>
                            <input type="text" name="CourseName" required />

                            <label>Instructor del Curso a Eliminar:</label>
                            <input type="text" name="Instructor" required />

                            <input type="submit" value="Eliminar Curso" class="btn btn-warning btn-sm" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

