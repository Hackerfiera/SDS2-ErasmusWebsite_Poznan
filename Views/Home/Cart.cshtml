@{
    ViewBag.Title = "Cart";
}
<h2>Cart</h2>
<h4>View the courses on your Learning Agreement Cart</h4>

<p>
    <input class="btn btn-danger" type="button" value="Empty Cart" onclick="emptyCarrito(); location.reload()" />
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Course</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="cart-items-container">
    </tbody>
</table>

<p style="display: flex; justify-content: end">@Html.ActionLink("Create Learning Agreement »", "Create", "LAs", new { area = "" }, new { @class = "btn btn-primary btn-lg" })</p>


@section Scripts {
    @Scripts.Render("~/bundles/CartNumber")
}